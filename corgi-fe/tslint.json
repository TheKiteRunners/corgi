{
  "extends": [
    "tslint:latest",
    "tslint-react",
    "tslint-config-prettier",
    "tslint-react-hooks"
  ],
  "rules": {
    "jsx-alignment": true,
    "jsx-curly-spacing": "always",
    "jsx-equals-spacing": "always",
    "jsx-space-before-trailing-slash": true,
    "jsx-wrap-multiline": true,
    "jsx-self-close": true,
    "jsx-key": true,
    "jsx-no-bind": true,
    "ordered-imports": false,
    "react-hooks-nesting": "error",
    "no-debugger": false,
    "no-console": {
      "severity": "warning"
    }
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "node_modules/**/**/*.ts",
      "coverage/lcov-report/*.js",
      "*.json",
      "**/*.json"
    ]
  }
}